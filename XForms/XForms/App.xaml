<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XForms.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#E91E63</Color> <!--Pink-->
            <Color x:Key="PrimaryDark">#C2185B</Color>
            <Color x:Key="Accent">#E040FB</Color> <!--Purple-->
            <Color x:Key="LightBackgroundColor">#FAFAFA</Color>
            <Color x:Key="DarkBackgroundColor">#C0C0C0</Color>
            <Color x:Key="MediumGrayTextColor">#212121</Color>
            <Color x:Key="LightTextColor">#757575</Color>
            <!--Above looks like color definitions which can be used at any page with its key-->

            <!--Below looks like Navigation page design color assignment-->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>

