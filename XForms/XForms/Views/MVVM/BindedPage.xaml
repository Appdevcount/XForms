<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XForms.Views.MVVM.BindedPage"
             Title="MVVM Binding">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            
            <Label Text="FName"></Label>
            <Entry Text="{Binding Person.FName}"></Entry>
            <Label Text="LName"></Label>
            <Entry Text="{Binding Person.LName}"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>