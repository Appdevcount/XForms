<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XForms.Views.XPlugins.CarouselV"
             xmlns:forms="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView">
    <!--Added CarouselView namespace-->
    <ContentPage.Content>
        <StackLayout>


            <forms:CarouselView x:Name="XCarouselV" ItemSelected="XCarouselV_ItemSelected">
                <forms:CarouselView.ItemTemplate>
                    <DataTemplate>
                        
                        <!--<Label Text="{Binding .}" FontSize="60"></Label>-->
                        <Image Source="{Binding .}"></Image>
                    </DataTemplate>
                </forms:CarouselView.ItemTemplate>
            </forms:CarouselView>


            <Label x:Name="ActveCaroselView"></Label>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>