                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Text="Enter Value" FontSize="Large"  Grid.Row="0" Grid.Column="0" FontAttributes="Bold"
                       HorizontalOptions="Center" VerticalOptions="Center"></Label>
